<Window x:Class="repairshop_client.WindowLogin"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:repairshop_client"
	mc:Ignorable="d"
	Height="450" Width="800"
	Title="Авторизация">
	<Grid>
		<TextBox 
			HorizontalAlignment="Left" 
			Margin="372,110,0,0" 
			TextWrapping="Wrap" 
			x:Name="TextBoxHostname"
			VerticalAlignment="Top" 
			Width="120"
		/>
		<TextBox 
			HorizontalAlignment="Left" 
			Margin="400,196,0,0" 
			TextWrapping="Wrap" 
			x:Name="TextBoxLogin"
			VerticalAlignment="Top" 
			Width="120"
		/>
		<PasswordBox
			HorizontalAlignment="Left" 
			Margin="414,270,0,0" 
			x:Name="PasswordBox"
			VerticalAlignment="Top" 
			Width="120"
		/>
		<Button 
			HorizontalAlignment="Left" 
			Margin="560,381,0,0" 
			VerticalAlignment="Top"
			IsDefault="True"
			Content="OK"
			Click="ButtonOK_Click"
		/>
		<Button 
			Content="Отмена" 
			HorizontalAlignment="Left" 
			Margin="544,183,0,0" 
			VerticalAlignment="Top"
			IsCancel="True"
		/>

	</Grid>
</Window>
